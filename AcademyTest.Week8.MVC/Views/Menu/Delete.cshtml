@model MenuViewModel
<p>Sei sicuro di voler eliminare il menu @Model.CodiceMenu - @Model.NomeMenu ?</p>
<form method="post">
<div class="form-group">
    <label asp-for="CodiceMenu"></label>
    <input asp-for="CodiceMenu" class="form-control" readonly/>
    <span asp-validation-for="CodiceMenu" class="text-danger"></span>
</div>


<div class="form-group">
    <label asp-for="NomeMenu"></label>
    <input asp-for="NomeMenu" class="form-control" readonly/>
    <span asp-validation-for="NomeMenu" class="text-danger"></span>
</div>


<input type="submit" value="Conferma eliminazione" class="btn btn-danger" />
<a class="btn btn-primary" asp-controller="Menu" asp-action="Index">Indietro</a>
</form>
